Proceso PromedioDe3Numeros
	// Declaracion de variables
	Definir numero1, numero2, numero3, sumNum, promedio Como Real;
	//  ;  para cerrar una intruccion, al igual que en Java
	
	// Entrada
	escribir "ingresar numero:";
	leer numero1;
	
	escribir "ingresar numero"; 
	leer numero2;
	
	escribir "ingresar numero"; 
	leer numero3;
	
	//proceso
	sumNum <- numero1+numero2+numero3;
	promedio <- sumNum/3;
	
	//salida
	Escribir "su promedio es ", promedio;
	
	
